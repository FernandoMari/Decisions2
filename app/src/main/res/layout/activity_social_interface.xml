<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SocialInterface"
    android:background="@drawable/main_social"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="740dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btajustes"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="70dp"
            android:src="@drawable/ajustes_ico"
            android:background="@drawable/ajustes_ico"
            android:layout_marginTop="10dp"
            >
        </Button>

        <Button
            android:id="@+id/btdecisions"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:background="@drawable/decisions_ico"
            android:layout_marginRight="70dp"
            >
        </Button>

        <Button
            android:id="@+id/btamigos"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/amigos_ico"
            android:layout_marginTop="10dp">
        </Button>


    </LinearLayout>
</LinearLayout>